{
    "name": "My browser extension",
    "version": "0.0.1",
    "description": "Test extension for browser",
    "permissions": ["tabs", "storage"],
    "background": {
        "scripts": ["src/background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "src/popup/popup.html"
    },
    "icons": {
        "128": "src/images/edit-tools.png"
    },
    "manifest_version": 2
}